<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Comments</h1>
    <% comments.forEach((com)=>{ %>
        <p><%=com.user %>: <span><%=com.text %></span> 
            <form action="/comments/<%=com.id %>" method="get"><button>show</button></form>
            <form action="/comments/<%=com.id%>?_method=delete" method="post"><button>delete</button></form>
        </p>
    <% })%>

    <a href="/comments/new">New Comment</a>
</body>
</html>